<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="2dp"
    android:background="@android:color/holo_purple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="6dp"
        android:background="@drawable/vecwhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#B67676"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_marginTop="50dp"
            android:background="#FAE6E9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:layout_alignBottom="@+id/go"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="-61dp"
                android:layout_marginRight="-61dp"
                android:layout_marginBottom="0dp"
                android:layout_toStartOf="@+id/go"
                android:layout_toLeftOf="@+id/go"
                android:background="#F4CCCC"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="141dp"
                android:layout_marginLeft="141dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:background="@color/black"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="@string/to_time"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>